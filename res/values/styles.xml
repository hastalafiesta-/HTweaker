<resources>

    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="BaseText" parent="@android:style/TextAppearance">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">center_vertical</item>
	</style>
	<style name="BaseSpinner">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	</style>
	<style name="BaseText.Small" parent="BaseText">
		<item name="android:textSize">12sp</item>
	</style>
	<style name="BaseText.About" parent="BaseText">
		<item name="android:textSize">14sp</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:paddingTop">12dip</item>
		<item name="android:textColorLink">@android:color/secondary_text_dark</item>
	</style>
	<style name="BaseText.FAQ_Q" parent="BaseText.About">
		<item name="android:layout_width">match_parent</item>
		<item name="android:paddingTop">12dip</item>
		<item name="android:textStyle">bold</item>
	</style>
	<style name="BaseText.FAQ_A" parent="BaseText.About">
		<item name="android:layout_width">match_parent</item>
		<item name="android:paddingTop">12dip</item>
	</style>


</resources>
